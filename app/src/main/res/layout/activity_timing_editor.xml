                            android:layout_height="wrap_content"
                            android:text="放行\n次序"
                            android:textColor="#ff0e0e0e"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="31dp"
                            android:text="黄灯"
                            android:textColor="#ff0e0e0e"
