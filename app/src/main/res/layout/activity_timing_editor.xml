                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="37dp"
                                    android:layout_height="20dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginVertical="10dp"
                                    android:gravity="center"
