                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="25dp"
                    android:id="@+id/timetable_add"
                    android:layout_width="wrap_content"
