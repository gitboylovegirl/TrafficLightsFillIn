<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#47707E">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strtus_str"
                android:textColor="#ffffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/status"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_home"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

<!--            android:track="@drawableable/switch_track"-->
            <Switch
                android:layout_marginLeft="5dp"
                android:id="@+id/change_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:id="@+id/login_out"
            android:layout_marginRight="100dp"
            android:layout_alignParentRight="true"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="@string/login_out"
            android:foreground="?android:attr/selectableItemBackground"
            android:textColor="@drawable/button_bc"
            android:textSize="13sp"
            />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:id="@+id/change_password"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:layout_width="55dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="@drawable/button_bc"
            android:textSize="13sp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="225dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_color_top_white"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/new_record_top"
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:background="@drawable/bg_color_215263"
                        android:gravity="center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@mipmap/new_recoed_top">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="最新任务"
                            android:textColor="@drawable/button_bc"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/update_record_top"
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:background="@drawable/bg_color_215263"
                        android:gravity="center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@mipmap/update_record_top">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="配时更新"
                            android:textColor="@drawable/button_bc"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/list_record_top"
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/bg_color_215263"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@mipmap/record_list_top">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/record_list"
                            android:textColor="@drawable/button_bc"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/timing_record_top"
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/bg_color_215263"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@mipmap/record_timing_top">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/timing"
                            android:textColor="@drawable/button_bc"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:visibility="visible"
                android:paddingVertical="5dp"
                android:paddingHorizontal="13dp"
                android:background="@drawable/bg_color_red"
                android:id="@+id/feed"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反馈"
                android:textColor="@color/white">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:paddingVertical="5dp"
                android:paddingHorizontal="13dp"
                android:background="@drawable/bg_color_yellow"
                android:id="@+id/tip_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/tip"
                android:textColor="@drawable/button_bc"
                >

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:paddingVertical="5dp"
                android:paddingHorizontal="13dp"
                android:background="@drawable/bg_color_green"
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/upgrade"
                android:textColor="@drawable/button_bc"
                >

            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/new_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/new_record"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/new_record"
            android:textColor="@android:color/darker_gray">

        </TextView>

        <TextView
            android:id="@+id/update_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/update_record"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="配时更新"
            android:textColor="@android:color/darker_gray">

        </TextView>

        <TextView
            android:id="@+id/list_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/record_list"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/work_list"
            android:textColor="@android:color/darker_gray">

        </TextView>

        <TextView
            android:id="@+id/timing_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/record_timing"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/timing"
            android:textColor="@android:color/darker_gray">

        </TextView>
    </LinearLayout>

</RelativeLayout>