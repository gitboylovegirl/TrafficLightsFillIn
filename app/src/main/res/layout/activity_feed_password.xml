<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.FeedPasswordActivity" >

    <EditText
        android:id="@+id/feed_phone"
        android:layout_width="317dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="76dp"
        android:background="@null"
        android:ems="10"
        android:hint="手机号"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="14sp">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/phone_code"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/feed_phone"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="验证码"
        android:background="@null"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:inputType="number" />

    <Button
        android:id="@+id/get_code_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/phone_code"
        android:layout_alignTop="@+id/feed_phone"
        android:layout_marginLeft="217dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_bc2"
        android:textColor="@drawable/button_bc"
        android:text="获取验证码" />

    <EditText
        android:id="@+id/feed_new_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/phone_code"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#C5C5C5"
        android:textSize="14sp"></EditText>

    <EditText
        android:layout_marginTop="25dp"
        android:layout_below="@+id/feed_new_password"
        android:id="@+id/feed_re_new_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="45dp"
        android:background="@null"
        android:hint="@string/re_new_password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#C5C5C5"
        android:textSize="14sp">
    </EditText>

    <TextView
        android:id="@+id/feed_password_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="130dp"
        android:background="@color/main_color"
        android:gravity="center"
        android:paddingVertical="17dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="18sp">

    </TextView>

    <TextView
        android:id="@+id/feed_password_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:text="取消"
        android:textColor="#ff2a4997">

    </TextView>
</RelativeLayout>